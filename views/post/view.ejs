<a class="back-button" href="/posts/feed">Back</a>

<h2> <%= thisPost.title %></h2>
<h3> <%= thisPost.author %> </h3>
<h4> <%= thisPost.viewpoint %> </h4>
<p>
  <%= thisPost.content %>
</p>
<p>
  <%= thisPost.date %>
</p>
<p>
  Comments
  <% for(var i = 0; i < thisPost.comments.length; i++) { %>
    <p>
      <%= thisPost.comments[i].author %>: <%= thisPost.comments[i].content %>
    </p>
  <% } %>
</p>



<!-- This should only be available when it is a user's own post -->
<% if(author === thisPost.author) { %>
<a class="btn btn-primary btn-large " href="/posts/<%= thisPost._id %>/edit">edit</a>

<div class="form-group">
  <form class="delete" action="?_method=DELETE" method="POST">
    <input class="btn btn-danger btn-large btn-block"
           type="submit"
           value="delete">
  </form>
</div>
<% } %>

<div class="form-group">
  <form class="comment" action="/posts/<%= thisPost._id %>/view?_method=PATCH" method="POST">
    <label for="comment">Comments</label>
    <br/>
    <input type="text"
           name="comment" id="comment"
           placeholder="Leave your comment here">
    <input class="btn btn-default btn-large" type="Submit" value="comment">
  </form>
</div>
