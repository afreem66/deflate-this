<a class="back-button" href="/posts/feed">Back</a>
<h2> <%= thisPost.title %> </h2>
<h3> <%= thisPost.author %> </h3>
<h4> <%= thisPost.viewpoint %> </h4>
<p>
  <%= thisPost.content %>
</p>
<p>
  <%= thisPost.date %>
</p>


<!-- Lets get to this once other functionality is finished -->
<div class="form-group">
  <form class="comment" action="/posts/<%= thisPost._id %>/view?_method=PATCH" method="POST">
    <label for="comment">Comments</label>
    <br/>
    <input class="form-control"
           type="text"
           name="comment[content]" id="comment"
           placeholder="Leave your comment here">
    <br/>
    <input type="submit" value="Comment">
  </form>
</div>
